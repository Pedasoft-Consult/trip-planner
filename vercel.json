{
  "version": 2,
  "builds": [
    {
      "src": "manage.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "20mb",
        "runtime": "python3.9"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/staticfiles/$1"
    },
    {
      "src": "/(.*)",
      "dest": "manage.py"
    }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "config.settings.production",
    "PYTHON_VERSION": "3.9",
    "DEBUG": "False",
    "SECRET_KEY": "@secret_key"
  },
  "buildsCommand": "python manage.py collectstatic --noinput && python manage.py migrate",
  "regions": ["iad1"]
}
